<Window x:Class="Zettelkasten.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zettelkasten.DesktopApp" 
        xmlns:vm="clr-namespace:Zettelkasten.DesktopApp.ViewModels"
        mc:Ignorable="d"
        Title="Ежедневник" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=vm:ApplicationViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Name="Menu">
            <Button Margin="2" Content="Поиск" Name="SearchButton" Click="SearchButton_Click"/>
            <Button Margin="2" Content="Планирование" Name="PlanningButton" Click="PlanningButton_Click"/>
            <Button Margin="2" Content="Zettelkasten" Name="ZettelkastenButton" Click="ZettelkastenButton_Click"/>
            <Button Margin="2" Content="Карта выбора" Name="SelectionMapButton" Click="SelectionMapButton_Click"/>
            <Button Margin="2" Content="Блокнот" Name="NotepadButton" Click="NotepadButton_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <StackPanel Name="ZettelNoteNew">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="5">
                        <StackPanel DataContext="{Binding ZettelNoteNew}">
                            <DockPanel>
                                <Label Content="Название идеи"/>
                                <TextBox Text="{Binding Name}"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Дата Создания"/>
                                <TextBox Text="{Binding CreatedAt}"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Тэги"/>
                                <TextBox Text="{Binding Tag}"/>
                            </DockPanel>
                            <StackPanel>
                                <Label>Содержимое</Label>
                                <TextBox AcceptsReturn="True" MinLines="6" Text="{Binding Content}"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel>
                            <Button Content="Сохранить" Command="{Binding CreateZettelNote}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1"></StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
